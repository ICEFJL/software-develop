@model WebApplication1.Models.TeachingRecord

@{
    var userIdString = Context.Session.GetString("NickName");
   
    Layout = "~/Views/Shared/_BackHome.cshtml";
    ViewData["Title"] = "创建";
}

<h2>申请支教</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeachID" class="control-label">支教ID</label>
                <select asp-for="TeachID" class="form-control" asp-items="ViewBag.TeachID"></select>
            </div>
            <div class="form-group">
                <label asp-for="StudentID" class="control-label">学生ID</label>
                <input class="form-control" value="@userIdString" readonly></input>
            </div>
            <div class="form-group">
                <input type="submit" value="创建" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="HIndex">返回列表</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}