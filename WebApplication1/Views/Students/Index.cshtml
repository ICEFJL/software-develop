@model IEnumerable<WebApplication1.Models.Student>

@{
    Layout = "~/Views/Shared/_BackAdmin.cshtml";
    ViewData["Title"] = "学生列表";
}

<h2>学生列表</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label for="searchString">搜索</label>
        <input type="text" name="searchString" class="form-control" placeholder="输入用户名或姓名" value="@ViewData["CurrentFilter"]" />
    </div>
    <div class="form-group">
        <label for="genderFilter">性别</label>
        <select name="genderFilter" class="form-control">
            <option value="">所有</option>
            <option value="男">男</option>
            <option value="女">女</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">搜索</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().StudentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().PhoneNumber)
            </th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StudentID">编辑</a> |
                    <a asp-action="Details" asp-route-id="@item.StudentID">详情</a> |
                    <a asp-action="Delete" asp-route-id="@item.StudentID">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>